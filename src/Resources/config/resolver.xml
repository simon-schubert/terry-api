<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

        <services>
            <defaults public="false" />
            <service id="terry_api.argument_value_resolver.abstract_http_client_resolver" class="TerryApiBundle\ArgumentValueResolver\AbstractHTTPClientResolver">
                <argument type="expression">service("terry_api.factory.http_server_factory").fromConfig()</argument>
                <tag name="controller.argument_value_resolver" priority="50" />
            </service>
            <service id="terry_api.argument_value_resolver.request_single_struct_resolver" class="TerryApiBundle\ArgumentValueResolver\RequestSingleStructResolver">
                <tag name="controller.argument_value_resolver" priority="50" />
                <argument type="expression">service("terry_api.factory.http_server_factory").fromConfig()</argument>
                <argument type="service" id="terry_api.facade.serializer_facade" />
                <argument type="service" id="terry_api.annotation.http_api_reader" />
                <argument type="service" id="validator" />
            </service>
            <service id="terry_api.argument_value_resolver.objects_array_resolver" class="TerryApiBundle\ArgumentValueResolver\ObjectsArrayResolver">
                <tag name="controller.argument_value_resolver" priority="50" />
                <argument type="expression">service("terry_api.factory.http_server_factory").fromConfig()</argument>
                <argument type="service" id="terry_api.facade.serializer_facade" />
                <argument type="service" id="terry_api.annotation.http_api_reader" />
                <argument type="service" id="validator" />
            </service>
        </services>
</container>
