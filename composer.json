{
    "name": "simon-schubert/terry-api",
    "type": "symfony-bundle",
    "description": "violines/rest-bundle is a Symfony Bundle to create REST APIs. While you can focus on your data model, business logic and persistance layer implementations, the bundle handles serialization, validation and HTTP related things like headers or status codes.",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "symfony/config": "^5.0",
        "symfony/dependency-injection": "^5.0",
        "symfony/http-kernel": "^5.0",
        "symfony/http-foundation": "^5.0",
        "symfony/serializer-pack": "^1.0",
        "symfony/validator": "^5.0",
        "symfony/contracts": "^2.0",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "infection/infection": "^0.20.0",
        "vimeo/psalm": "^4.0",
        "phake/phake": "^3.1",
        "matthiasnoback/symfony-dependency-injection-test": "^4.1",
        "rector/rector": "^0.8.6",
        "doctrine/annotations": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "Violines\\RestBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Violines\\RestBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "php-cs-fixer fix --allow-risky=yes --dry-run",
            "phpunit",
            "psalm --show-info=true",
            "infection"
        ]
    }
}